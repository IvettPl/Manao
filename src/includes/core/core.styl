html
    font-size 62.5%

html,
body
    height 100%

body
    min-width 320px
    font-family $base-font
    line-height 24px
    font-size 16px
    font-weight 400
    color $text-color-first

header,
aside,
section,
footer
    display block

input 
    font-family $base-font
    border  0 
    outline  0 
    box-shadow  none 
    background  none 
 

input[type="text"]  
    padding  0 10px 
    width  100% 
    height  48px 
    font-family $base-font
    line-height  22px 
    font-size  18px  
    color $white
    background none
    border  1px solid $dark-purple
    border-radius  4px 
    box-sizing  border-box 

    &:-webkit-autofill  
        -webkit-box-shadow: inset 0 0 0 24px $dark-purple !important 

textarea 
    padding 10px 
    width  100% 
    height 163px
    display block
    font-family $base-font
    line-height  20px 
    font-size  16px 
    color $text-color-secondary
    background none
    border  1px solid $dark-purple
    border-radius  4px 
    box-sizing  border-box 
 

/*placeholder styles*/
::-webkit-input-placeholder
    color $text-color-first

::-moz-placeholder
    color $text-color-first

:-moz-placeholder
    color $text-color-first

:-ms-input-placeholder
    color $text-color-first

:focus::-webkit-input-placeholder
    color transparent

:focus::-moz-placeholder
    color transparent

:focus:-moz-placeholder
    color transparent

:focus:-ms-input-placeholder
    color transparent


.wrapper
    width 100%
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between
    overflow hidden

.center
    margin  0 auto 
    padding  0 20px 
    max-width  1210px 
    width  100% 
    box-sizing  border-box 


img 
    width 100%
    display block

button  
    margin  0 
    padding  0  
    border  0 
    outline  0 
    box-shadow  none 

a  
    text-decoration  none 
    transition  color $transition-base ease 


h1  
    font-family  $second-font 
    line-height  70px 
    font-size  64px 
    color $text-color-secondary

    @media(max-width: 980px)
        line-height  50px 
        font-size  44px       

    @media(max-width: 768px)
        line-height  44px 
        font-size  34px                

    strong
        font-weight  700 

h2 
    font-family $second-font 
    line-height  40px  
    font-size  48px 
    color  $dark 
    font-weight  700 
    
    @media(max-width: 960px) 
        line-height  34px  
        font-size  34px 
 
 