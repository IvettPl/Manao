.banner
    padding 106px 0 70px
    min-height 100vh
    display flex
    background $dark-blue url(../img/banner-bg-right.png) no-repeat right center
    background-size cover
    box-sizing border-box

    @media(max-width: 768px)
        padding 64px 0 30px

    
    &:before
        content '' 
        width 100% 
        height 100%
        position absolute
        top 0
        left 0
        background   url(../img/banner-bg.svg) no-repeat right center
        background-size cover 

    &__desc
        margin-bottom 16px
        line-height  26px 
        font-size  18px 
        color $purple
        font-weight  400 
        opacity 0
        transform translateX(-100%)
        transition opacity $transition-base, transform $transition-base

        &.animation
            opacity 1
            transform translateX(0)



    h1 
        margin-bottom 25px 
        opacity 0
        transform translateX(100%)
        transition opacity $transition-base, transform $transition-base

        &.animation
            opacity 1
            transform translateX(0)

    .btn__wrap 
        opacity 0 
        transition opacity $transition-base $transition-base 

        &.animation
            opacity 1 

    .center 
        display flex
        flex-direction column
        justify-content center
        position relative

    
