.partners 
    font-family $second-font
    line-height 24px
    font-size 17px
    color $text-color-secondary
    font-weight 400
    position absolute
    bottom -24px
    right 20px
    display flex
    align-items center
    gap 22px
    opacity 0
    transform translateX(100%)
    transition opacity $transition-base $transition-base, transform $transition-base $transition-base

    &.animation
        opacity 1
        transform translateX(0)

    @media(max-width: 360px)
        margin auto
        right 0
        left 0
        justify-content center
        gap 10px

    
 