.header-info   
    margin-left 11vw
    display flex
    align-items center

    @media(max-width: 1100px) {  
        margin-left 5vw
    } 

    @media(max-width: 980px)
        margin 20px 0 0
        padding 0 20px
        width 100%
        flex-direction column
        align-items flex-start
        box-sizing border-box

    &__link
        display flex
        align-items center
        font-family $second-font
        font-weight  400 
        font-size  17px 
        line-height  17px 
        letter-spacing 0.05em
        color $text-color-secondary
        transition color 300ms

        &:last-child
            margin-left 44px

            @media(max-width: 980px)
                margin 20px 0 0

        img
            margin -4px 16px 0 0
            width 16px
            display block


        &:hover 
            color $purple