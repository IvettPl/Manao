.form-area
    margin-top -28px
    &__box
        padding-top 28px
        width 100%
        position relative
        opacity 0
        transform translateX(100%)
        transition opacity $transition-base, transform $transition-base 

        &.animation
            opacity 1
            transform translateX(0)

        &--bottom 
            display flex
            align-items center

            @media(max-width  670px)
                flex-direction column

            .btn
                margin-left 20px
                max-width 226px
                font-family $second-font
                font-size 14px

            p 
                line-height  14px  
                font-size  12px 
                color  $purple   
                font-weight  400    

                @media(max-width  670px)
                    margin-bottom 20px

                a
                    color  $purple 
                    white-space nowrap
                    position relative  
                    

                    &:before 
                        content ''
                        width 100%
                        height 1px
                        position absolute
                        bottom 0
                        left 0
                        background-color $purple 
                        transition width $transition-base

                    &:hover
                        &:before
                            width 0

        &--group
            padding-top 10px

        .error  
            border-color  red
            
        .label 
            margin-top 4px
            position  absolute 
            left  10px 
            top  50% 
            line-height 20px
            font-size 16px
            color $purple
            font-weight 300
            transition  all 200ms

            &--textarea
                margin-top 0
                top 38px 
