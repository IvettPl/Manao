.popup
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    display flex
    justify-content center
    align-items center
    opacity 0
    visibility hidden
    background-color rgba($dark-blue, 0.95)
    transition opacity $transition-base
    z-index 7

    &.show 
        opacity 1
        visibility visible

        .dialog 
            opacity 1
            transform scale(1)

.dialog 
    padding 20px
    width 100%
    max-width 300px
    position relative
    opacity 0
    transform scale(0.5)
    border-radius 10px
    background-color $white
    transition opacity $transition-base $transition-base, transform $transition-base $transition-base
    box-sizing border-box

    .btn__close
        width 14px
        height 14px
        position absolute
        top 5px
        right 5px
        transition opacity $transition-base
        cursor pointer

        &:before,
        &:after
            content ''
            margin-top -1px
            width 100%
            height 2px
            position absolute
            top 50%
            left 0
            background-color $dark-blue

        &:before
            transform rotate(45deg)
        &:after
            transform rotate(-45deg)

        &:hover
            opacity 0.7