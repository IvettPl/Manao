.publications
    padding 115px 0 
    
    @media(max-width: 960px)
        padding 40px 0


    h2 
        margin-bottom 14px
        text-align center

    &__desc 
        margin-bottom 44px
        line-height  24px 
        font-size  18px 
        color $grey
        text-align center

    &__item
        border-radius 9px
        background-color $purple-light
        overflow hidden

        &-title
            margin-bottom 13px
            min-height 48px
            font-family  $second-font 
            line-height  24px
            font-size  22px   
            font-weight  600 
            color  $dark       
            -webkit-line-clamp 2  
            display  -webkit-box 
            -webkit-box-orient  vertical 
            overflow  hidden 

            &:hover
                color  rgba($dark, 0.8)       
            
                

        &-content 
            padding 27px 25px 80px 
            min-height 242px
            position relative
            box-sizing border-box

            p  
                line-height  24px  
                font-size  16px 
                font-weight  300 
                color  $grey        

            &--bottom
                padding 20px 0
                width calc(100% - 50px)
                position absolute
                bottom 0
                left 25px
                display flex
                justify-content space-between

                &:before
                    content ''
                    width 100%
                    height 2px
                    position absolute
                    top 0
                    left 0
                    background-color $grey-light

        .logo
            img 
                width auto   

        .date
            padding-left 25px
            font-family $second-font 
            line-height  17px 
            font-size  15px 
            font-weight  500 
            color $grey-base   
            position relative 
            box-sizing border-box   

            &:before 
                content ''
                width 16px
                height 16px
                position absolute 
                top -1px
                left 0
                background url('../img/icn-date.svg') no-repeat left center
 